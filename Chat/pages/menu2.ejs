<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>BULink</title>
        <link rel="stylesheet" type="text/css" href="../public/styles/menu.css">
        <link rel="icon" sizes="any" href="../public/media/menu/lightblue-logo.png">
        <script src="../public/scripts/pop-up.js"></script>
        <script src="../public/scripts/users.js"></script>
        <script src="../public/scripts/rooms.js"></script>
        <script src="../public/scripts/toolbar.js"></script>
    </head>
    <body>
        <div>
            <div class="toolbar">
                <div class="logo-toolbar">
                    <div class="square-logo"></div>
                </div>

                <div id="header1" class="header">
                    <p align="center" style="user-select: none; color: #ffffff;">
                        Главная страница
                    </p>
                </div>

                <div id="about" class="round-button" onclick="about()">
                    <div class="round-logo">
                        <img class="logo" alt="about" src="../public/media/menu/about.png">
                    </div>
                </div>

                <div id="settings" class="round-button" onclick="settings()">
                    <div class="round-logo">
                        <img class="logo" alt="setting" src="../public/media/menu/settings.png">
                    </div>
                </div>

                <div id="logout" class="round-button">
                    <div class="round-logo">
                        <img class="round-logo" alt="logout" src="../public/media/menu/logout.png">
                    </div>
                </div>

                <div id="pop-up" class="round-button" onclick="popUp()">
                    <div class="round-logo">
                        <img class="round-logo" alt="pop-up" src="../public/media/menu/open-menu.png">
                    </div>
                </div>
            </div>
            <div class="main">
                <div class="left-menu">
                    <div class="finder-square">
                        <input type="text" class="user-finder" id="user-finder" oninput="findUser()"
                               placeholder="Search for users" title="Type user's login"/>
                        <span id="delete-users-list" class="delete-list" onclick="deleteUsersList()">&times;</span>
                    </div>
                    <div id="users-list" class="users-list">
                        <div class="user">
                            <div class="avatar">
                                <img class="image" src="../public/media/avatars/male/1.png">
                            </div>
                            <p class="name">Name</p>
                        </div>
                        <div class="user">
                            <div class="avatar">
                                <img class="image" src="../public/media/avatars/male/2.png">
                            </div>
                           <p class="name">Name</p>
                        </div>
    <!--                    тут будут юзеры-->
                    </div>
                </div>
                <div class="right-menu">
                    <div class="finder-square">
                        <input type="text" id="ChatFinder" oninput="findRoom()"
                               placeholder= "Search for chat" title="Type chat's name"/>
                        <span id="delete-rooms-list" class="delete-list" onclick="deleteRoomsList()">&times;</span>
                    </div>
                    <div class="finder-square" id="adder">
                        <input type="text" id="AddRoom" maxlength="50"
                               placeholder= "Add new room" title= "Type room's name"/>
                        <span id="delete-add-list" class="delete-list" onclick="deleteAddList()">&times;</span>
                    </div>
                    <button class="plus" onclick="addRoom()"></button>
                    <div id="rooms-list" class="rooms-list">

                        <% rooms.forEach (room => { %>
                            <div class="room">
                                <div class="room-image" style="background: #FFC0CB">
                                    <p class="letter">C1</p>
                                </div>
                                <p class="room-name"> <%= room %> </p>
                                <p class="last-message">Michael: I love POST!</p>
                                <p class="time">13:47</p>
                            </div>
                        <% }) %>

<!--                        тут будут комнаты-->
                    </div>
                </div>
            </div>
        </div>
        <div id="about-modal" class="modal">
            <div class="body-modal">
                <div class="top-strip">
                    <p class="top-text">About</p>
                </div>
                <div class="bottom-strip">
                    <p class="bottom-text">Coming soon...</p>
                    <div class="loader"></div>
                </div>
                <span class="close" onclick="closeModal('about-modal')">&times;</span>
            </div>
        </div>
        <div id="settings-modal" class="modal">
            <div class="body-modal">
                <div class="top-strip">
                    <p class="top-text">Settings</p>
                </div>
                <div class="bottom-strip">
                    <p class="bottom-text">Coming soon...</p>
                    <div class="loader"></div>
                </div>
                <span class="close" onclick="closeModal('settings-modal')">&times;</span>
            </div>
        </div>
    </body>
</html>
